<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp"
        tools:context=".ConnectDeviceActivity">

        <!-- Top Menu -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorPrimary">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ivSugerencias"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                app:icon="@drawable/sugerencias"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@android:color/white"
                android:text="Sugerencias"
                android:textColor="@android:color/white"
                android:fontFamily="@font/lato_bold_font"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ivHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                app:icon="@drawable/home"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@android:color/white"
                android:text="Home"
                android:textColor="@android:color/white"
                android:fontFamily="@font/lato_bold_font"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ivCalendar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                app:icon="@drawable/calendario"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@android:color/white"
                android:text="Calendar"
                android:textColor="@android:color/white"
                android:fontFamily="@font/lato_bold_font"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ivNotifications"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                app:icon="@drawable/notificaciones"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@android:color/white"
                android:text="Notifications"
                android:textColor="@android:color/white"
                android:fontFamily="@font/lato_bold_font"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Main Content -->
        <FrameLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="16dp"
            android:background="@color/colorBackground">

            <TextView
                android:id="@+id/tvwWelcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/lato_bold_font"
                android:text="@string/promt_device_title"
                android:textAlignment="center"
                android:textColor="@color/colorOnBackground"
                android:textStyle="bold"
                android:textSize="22sp" />

            <LinearLayout
                android:id="@+id/itemContainer"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:background="@drawable/item_background_selector"
                android:gravity="top">

                <!-- TextView -->
                <TextView
                    android:id="@+id/tvwDevice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/promt_device"
                    android:textAlignment="center"
                    android:textColor="@color/colorOnBackground"
                    android:textStyle="bold"
                    android:textSize="22sp" />

                <!-- RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTypeDevice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:id="@+id/powerOutputTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/lato_bold_font"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/colorOnBackground"
                android:textStyle="normal"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/maxHeartRateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/lato_bold_font"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/colorOnBackground"
                android:textStyle="normal"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/restingHeartRateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/lato_bold_font"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/colorOnBackground"
                android:textSize="22sp"
                android:textStyle="normal"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartDevice"
                android:layout_width="226dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="20dp"
                app:backgroundTint="@color/colorPrimary"
                android:fontFamily="@font/lato_bold_font"
                android:text="@string/start_device"
                android:textAllCaps="false"
                android:textColor="@color/colorOnPrimary"
                android:textSize="20sp"/>
        </FrameLayout>

        <!-- Bottom Menu -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorPrimary">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ivRun"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                app:icon="@drawable/run"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@android:color/white"
                android:text="Run"
                android:textColor="@android:color/white"
                android:fontFamily="@font/lato_bold_font"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ivClockW"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                app:icon="@drawable/calend_clock"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@android:color/white"
                android:text="Clock"
                android:textColor="@android:color/white"
                android:fontFamily="@font/lato_bold_font"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ivRunExe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                app:icon="@drawable/start_exe"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@android:color/white"
                android:text="Run Exe"
                android:textColor="@android:color/white"
                android:fontFamily="@font/lato_bold_font"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ivWatch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                app:icon="@drawable/watch"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@android:color/white"
                android:text="Watch"
                android:textColor="@android:color/white"
                android:fontFamily="@font/lato_bold_font"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
