<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/top_menu_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:stretchColumns="0,1,2,3">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ivSugerencias"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/transparent"
                    app:icon="@drawable/sugerencias"
                    app:iconGravity="top"
                    app:iconPadding="8dp"
                    app:iconTint="@android:color/white"
                    android:text="Suggestions"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/lato_bold_font"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ivHome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/transparent"
                    app:icon="@drawable/home"
                    app:iconGravity="top"
                    app:iconPadding="8dp"
                    app:iconTint="@android:color/white"
                    android:text="Home"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/lato_bold_font"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ivCalendar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/transparent"
                    app:icon="@drawable/calendario"
                    app:iconGravity="top"
                    app:iconPadding="8dp"
                    app:iconTint="@android:color/white"
                    android:text="Calendar"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/lato_bold_font"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ivNotifications"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/transparent"
                    app:icon="@drawable/notificaciones"
                    app:iconGravity="top"
                    app:iconPadding="8dp"
                    app:iconTint="@android:color/white"
                    android:text="Notifications"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/lato_bold_font"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
            </TableRow>
        </TableLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Main Content -->
    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:background="?attr/colorOnBackground"
        app:layout_constraintTop_toBottomOf="@id/top_menu_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_menu_container">

        <TextView
            android:id="@+id/tvwWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/lato_bold_font"
            android:text="@string/tittle_suggest_routes"
            android:textAlignment="center"
            android:textColor="?attr/colorOnBackground"
            android:textStyle="bold"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvwCiudad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/lato_bold_font"
            android:text="Bogotá, Colombia"
            android:textAlignment="center"
            android:textColor="?attr/colorOnBackground"
            android:textStyle="normal"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvwEdad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/lato_bold_font"
            android:text="26 años"
            android:textAlignment="center"
            android:textColor="?attr/colorOnBackground"
            android:textStyle="normal"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvwPesoEstatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/lato_bold_font"
            android:text="60 kg, 174 cm"
            android:textAlignment="center"
            android:textColor="?attr/colorOnBackground"
            android:textStyle="normal"
            android:textSize="22sp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="260dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="450dp"
            app:cardBackgroundColor="?attr/colorPrimary">

            <ImageView
                android:id="@+id/imgStrava"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_centerVertical="false"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/logostrava"
                android:layout_marginTop="20dp"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="550dp"
            app:cardBackgroundColor="?attr/colorOnBackground">

            <TextView
                android:id="@+id/tvwCerrarSession"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/lato_bold_font"
                android:text="@string/home_close_session"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="25dp"
                android:textStyle="bold" />
        </com.google.android.material.card.MaterialCardView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textAlignment="textEnd"
            android:background="@color/colorOnBackground">

            <TextView
                android:id="@+id/tvwVersionName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:fontFamily="@font/lato_bold_font"
                android:text="x.x.x"
                android:textAlignment="inherit"
                android:textColor="@android:color/black"
                android:textStyle="normal"
                android:layout_marginBottom="0dp"
                android:textSize="12dp" />
        </RelativeLayout>
    </FrameLayout>

    <!-- Bottom Menu -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottom_menu_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:stretchColumns="0,1,2,3">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ivRun"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/transparent"
                    app:icon="@drawable/run"
                    app:iconGravity="top"
                    app:iconPadding="8dp"
                    app:iconTint="@android:color/white"
                    android:text="Run"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/lato_bold_font"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ivClockW"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/transparent"
                    app:icon="@drawable/calend_clock"
                    app:iconGravity="top"
                    app:iconPadding="8dp"
                    app:iconTint="@android:color/white"
                    android:text="Clock"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/lato_bold_font"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ivRunExe"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/transparent"
                    app:icon="@drawable/start_exe"
                    app:iconGravity="top"
                    app:iconPadding="8dp"
                    app:iconTint="@android:color/white"
                    android:text="Start"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/lato_bold_font"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ivWatch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/transparent"
                    app:icon="@drawable/watch"
                    app:iconGravity="top"
                    app:iconPadding="8dp"
                    app:iconTint="@android:color/white"
                    android:text="Watch"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/lato_bold_font"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
            </TableRow>
        </TableLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
