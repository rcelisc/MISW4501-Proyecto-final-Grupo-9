<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/top_menu_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:stretchColumns="0,1,2,3">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ivSugerencias"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/transparent"
                    app:icon="@drawable/sugerencias"
                    app:iconGravity="top"
                    app:iconPadding="8dp"
                    app:iconTint="@android:color/white"
                    android:text="Suggestions"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/lato_bold_font"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ivHome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/transparent"
                    app:icon="@drawable/home"
                    app:iconGravity="top"
                    app:iconPadding="8dp"
                    app:iconTint="@android:color/white"
                    android:text="Home"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/lato_bold_font"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ivCalendar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/transparent"
                    app:icon="@drawable/calendario"
                    app:iconGravity="top"
                    app:iconPadding="8dp"
                    app:iconTint="@android:color/white"
                    android:text="Calendar"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/lato_bold_font"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ivNotifications"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/transparent"
                    app:icon="@drawable/notificaciones"
                    app:iconGravity="top"
                    app:iconPadding="8dp"
                    app:iconTint="@android:color/white"
                    android:text="Notifications"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/lato_bold_font"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
            </TableRow>
        </TableLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Main Content -->
    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:background="?attr/colorOnBackground"
        app:layout_constraintTop_toBottomOf="@id/top_menu_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_menu_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="top">

            <TextView
                android:id="@+id/tvwTypeRun"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/type_training"
                android:textAlignment="center"
                android:textColor="@color/colorBackground"
                android:textStyle="bold"
                android:textSize="22dp" />

        </LinearLayout>

        <Chronometer
            android:id="@+id/chronometer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="00 : 00 : 00"
            android:textColor="@color/colorOnBackground"
            android:layout_marginTop="250dp"
            android:layout_gravity="center_horizontal"
            android:visibility="visible" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStart"
            android:layout_width="226dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="100dp"
            android:backgroundTint="?attr/colorPrimary"
            android:text="@string/start_training"
            android:textAllCaps="false"
            android:textColor="@color/colorBackground"
            android:textSize="24sp"
            android:fontFamily="@font/lato_bold_font"
            app:cornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.529"
            app:layout_constraintStart_toStartOf="parent" />
    </FrameLayout>

    <!-- Bottom Menu -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottom_menu_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:stretchColumns="0,1,2,3">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ivRun"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/transparent"
                    app:icon="@drawable/run"
                    app:iconGravity="top"
                    app:iconPadding="8dp"
                    app:iconTint="@android:color/white"
                    android:text="Run"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/lato_bold_font"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ivClockW"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/transparent"
                    app:icon="@drawable/calend_clock"
                    app:iconGravity="top"
                    app:iconPadding="8dp"
                    app:iconTint="@android:color/white"
                    android:text="Clock"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/lato_bold_font"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ivRunExe"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/transparent"
                    app:icon="@drawable/start_exe"
                    app:iconGravity="top"
                    app:iconPadding="8dp"
                    app:iconTint="@android:color/white"
                    android:text="Start"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/lato_bold_font"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ivWatch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/transparent"
                    app:icon="@drawable/watch"
                    app:iconGravity="top"
                    app:iconPadding="8dp"
                    app:iconTint="@android:color/white"
                    android:text="Watch"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/lato_bold_font"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
            </TableRow>
        </TableLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
